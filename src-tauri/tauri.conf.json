{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Gosibang",
  "version": "0.2.39",
  "identifier": "com.gosibang.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Gosibang - Prescription Manager",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "useHttpsScheme": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.supabase.co https://sql.js.org http://localhost:* http://127.0.0.1:*; style-src 'self' 'unsafe-inline'; script-src 'self' 'wasm-unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": [
      "resources/prescription_definitions.json",
      "resources/prescription_categories.json"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
